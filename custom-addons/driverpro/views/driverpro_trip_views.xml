<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vista Lista de Viajes -->
        <record id="view_driverpro_trip_tree" model="ir.ui.view">
            <field name="name">driverpro.trip.tree</field>
            <field name="model">driverpro.trip</field>
            <field name="arch" type="xml">
                <list string="Viajes Driver Pro" decoration-info="state == 'draft'" decoration-primary="state == 'empty'" decoration-warning="state == 'paused'" decoration-success="state == 'active'" decoration-muted="state == 'cancelled'">
                    <field name="name"/>
                    <field name="driver_id"/>
                    <field name="vehicle_id"/>
                    <field name="card_id"/>
                    <field name="card_available_credits" decoration-danger="card_available_credits &lt;= 0"/>
                    <field name="origin"/>
                    <field name="destination"/>
                    <field name="is_recharge_trip" string="Con Recarga" widget="boolean_toggle"/>
                    <field name="is_empty_trip" string="Vacío" widget="boolean_toggle"/>
                    <field name="empty_time_remaining" string="Tiempo Rest." decoration-danger="empty_time_remaining &lt;= 5" decoration-warning="empty_time_remaining &lt;= 15" invisible="state != 'empty'"/>
                    <field name="is_scheduled" string="Programado"/>
                    <field name="scheduled_datetime" string="Fecha Cita"/>
                    <field name="start_datetime"/>
                    <field name="duration" widget="float_time"/>
                    <field name="amount_mxn" string="MXN" sum="Total MXN"/>
                    <field name="amount_usd" string="USD" sum="Total USD"/>
                    <field name="total_amount_mxn" string="Total MXN" sum="Total General"/>
                    <field name="credit_consumed" string="Rec. Consumida"/>
                    <field name="credit_refunded" string="Rec. Reembolsada"/>
                    <field name="state"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <!-- Vista Formulario de Viajes -->
        <record id="view_driverpro_trip_form" model="ir.ui.view">
            <field name="name">driverpro.trip.form</field>
            <field name="model">driverpro.trip</field>
            <field name="arch" type="xml">
                <form string="Viaje Driver Pro">
                    <header>
                        <!-- Botones para viajes regulares -->
                        <button name="action_start" type="object" string="Iniciar Viaje" class="oe_highlight" invisible="state != 'draft' or not id" help="Iniciar el viaje y consumir una recarga de la tarjeta."/>

                        <!-- Botones para viajes vacíos -->
                        <button name="action_start_empty" type="object" string="Iniciar Viaje Vacío" class="btn-primary" invisible="state != 'draft' or not id" help="Iniciar búsqueda de clientes en aeropuerto/zona."/>
                        <button name="action_convert_empty_to_active" type="object" string="Cliente Encontrado" class="oe_highlight" invisible="state != 'empty'" help="Convertir a viaje activo cuando encuentra cliente."/>
                        <button name="action_cancel_empty" type="object" string="Cancelar Búsqueda" invisible="state != 'empty'" help="Cancelar viaje vacío."/>

                        <!-- Botones comunes -->
                        <button name="action_pause" type="object" string="Pausar" invisible="state != 'active'"/>
                        <button name="action_resume" type="object" string="Reanudar" class="oe_highlight" invisible="state != 'paused'"/>
                        <button name="action_done" type="object" string="Finalizar" class="oe_highlight" invisible="state not in ['active', 'paused']"/>
                        <button name="action_cancel" type="object" string="Cancelar" invisible="state not in ['draft', 'active', 'paused']"/>
                        <button name="action_refund_credit" type="object" string="Recuperar Recarga" class="btn-warning" invisible="state != 'cancelled' or not credit_consumed or credit_refunded" confirm="¿Está seguro de que desea recuperar la recarga de este viaje cancelado? Esta acción no se puede deshacer." help="Recuperar la recarga consumida por este viaje cancelado."/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,empty,active,paused,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_pauses" type="object" class="oe_stat_button" icon="fa-pause" invisible="pause_count == 0">
                                <field name="pause_count" widget="statinfo" string="Pausas"/>
                            </button>
                        </div>

                        <widget name="web_ribbon" title="Pausado" bg_color="bg-warning" invisible="is_paused == False"/>
                        <widget name="web_ribbon" title="Finalizado" bg_color="bg-success" invisible="state != 'done'"/>
                        <widget name="web_ribbon" title="Cancelado" bg_color="bg-danger" invisible="state != 'cancelled'"/>

                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_attachments" type="object" class="oe_stat_button" icon="fa-paperclip">
                                <field name="attachment_count" widget="statinfo" string="Archivos"/>
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>

                        <group>
                            <group name="basic_info" string="Información del Viaje">
                                <field name="driver_id" options="{'no_create': True}" readonly="state != 'draft'" help="Selecciona el chofer que realizará el viaje. El vehículo se asignará automáticamente."/>
                                <field name="vehicle_id" options="{'no_create': True}" readonly="state != 'draft'" help="Vehículo asignado automáticamente basado en el chofer seleccionado en Fleet."/>
                                <field name="card_id" readonly="state != 'draft'" help="Tarjeta asignada automáticamente al vehículo."/>
                                <field name="is_recharge_trip" readonly="state != 'draft'" widget="boolean_toggle" help="Marcar si este viaje requiere consumo de recarga (origen en zona controlada)"/>
                                <field name="card_available_credits" readonly="1" invisible="card_id == False" decoration-danger="card_available_credits &lt;= 0" decoration-warning="card_available_credits &lt;= 5" decoration-success="card_available_credits &gt; 5" help="Número de recargas disponibles en la tarjeta. Se necesita al menos 1 recarga para iniciar el viaje."/>
                                <div class="alert alert-warning" role="alert" invisible="not card_id or card_available_credits &gt; 0">
                                    <i class="fa fa-exclamation-triangle"/>
                                    <strong>Sin recargas disponibles:</strong> Esta tarjeta no tiene recargas disponibles. 
                                    Puede crear el viaje en borrador, pero debe recargar la tarjeta antes de poder iniciarlo.
                                </div>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group name="trip_info" string="Destinos y Pasajeros">
                                <field name="client_name" readonly="state not in ['draft', 'active', 'paused']" invisible="state != 'active' or not is_empty_trip"/>
                                <field name="origin" readonly="state not in ['draft', 'active', 'paused']"/>
                                <field name="destination" readonly="state not in ['draft', 'active', 'paused']"/>
                                <field name="passenger_count" readonly="state not in ['draft', 'active', 'paused']"/>
                                <field name="passenger_reference" readonly="state not in ['draft', 'active', 'paused']"/>
                                <field name="consumed_credits" readonly="1" invisible="consumed_credits == 0"/>
                                <field name="credit_consumed" readonly="1" invisible="not credit_consumed"/>
                                <field name="credit_refunded" readonly="1" invisible="not credit_refunded"/>
                            </group>
                            <group name="empty_trip_info" string="Viaje Vacío (Búsqueda)" invisible="state != 'empty'">
                                <field name="is_empty_trip" readonly="1" widget="boolean_toggle"/>
                                <field name="empty_wait_limit_minutes" readonly="state != 'empty'"/>
                                <field name="empty_started_at" readonly="1"/>
                                <field name="empty_time_remaining" readonly="1" decoration-danger="empty_time_remaining &lt;= 5" decoration-warning="empty_time_remaining &lt;= 15" decoration-success="empty_time_remaining &gt; 15"/>
                                <div class="alert alert-warning" role="alert" invisible="empty_time_remaining == False or empty_time_remaining &gt; 5">
                                    <i class="fa fa-clock-o"/>
                                    <strong>¡Tiempo casi agotado!</strong> El viaje vacío se cancelará automáticamente en <field name="empty_time_remaining" nolabel="1"/>
 minutos.
                                </div>
                                <div class="alert alert-info" role="alert" invisible="state != 'empty'">
                                    <i class="fa fa-info-circle"/>
                                    <strong>Viaje vacío activo:</strong> El chofer está buscando clientes. Use "Cliente Encontrado" cuando tenga un pasajero.
                                </div>
                            </group>
                        </group>

                        <group>
                            <group name="payment_info" string="Información de Pago">
                                <field name="payment_method" readonly="state not in ['draft', 'active', 'paused']"/>
                                <field name="amount_mxn" readonly="state not in ['draft', 'active', 'paused']"/>
                                <field name="payment_in_usd" readonly="state not in ['draft', 'active', 'paused']"/>
                                <field name="amount_usd" readonly="state not in ['draft', 'active', 'paused']" invisible="not payment_in_usd" required="payment_in_usd"/>
                                <field name="exchange_rate" readonly="state not in ['draft', 'active', 'paused']" invisible="not payment_in_usd" required="payment_in_usd"/>
                                <field name="total_amount_mxn" readonly="1" string="Total MXN" decoration-bf="1" invisible="amount_mxn == 0 and not payment_in_usd"/>
                                <field name="payment_reference" readonly="state not in ['draft', 'active', 'paused']"/>
                            </group>
                            <group name="schedule_info" string="Programación de Cita">
                                <field name="is_scheduled" readonly="state != 'draft'"/>
                                <field name="scheduled_datetime" readonly="state != 'draft'" invisible="not is_scheduled" required="is_scheduled"/>
                                <field name="scheduled_notification_sent" readonly="1" invisible="not is_scheduled or not scheduled_notification_sent"/>
                                <button name="action_send_test_notification" type="object" string="Enviar Recordatorio" class="btn-link" invisible="not is_scheduled or state not in ['draft', 'active']"/>
                            </group>
                        </group>

                        <group>
                            <group name="time_info" string="Información de Tiempos">
                                <field name="start_datetime" readonly="1"/>
                                <field name="end_datetime" readonly="1"/>
                                <field name="duration" widget="float_time" readonly="1"/>
                                <field name="pause_duration" widget="float_time" readonly="1"/>
                                <field name="effective_duration" widget="float_time" readonly="1"/>
                                <field name="is_paused" invisible="1"/>
                                <field name="current_pause_id" readonly="1" invisible="is_paused == False"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Pausas" name="pauses" invisible="pause_count == 0">
                                <field name="pause_ids" readonly="1">
                                    <list string="Pausas">
                                        <field name="reason_id"/>
                                        <field name="start_datetime"/>
                                        <field name="end_datetime"/>
                                        <field name="duration" widget="float_time"/>
                                        <field name="is_active"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Comentarios" name="comments">
                                <field name="comments" placeholder="Comentarios adicionales sobre el viaje con formato enriquecido..."/>
                            </page>
                            <page string="Programación" name="scheduling" invisible="not is_scheduled">
                                <group string="Información de Cita Programada">
                                    <group>
                                        <field name="scheduled_datetime" readonly="state != 'draft'"/>
                                        <field name="scheduled_notification_sent" readonly="1"/>
                                    </group>
                                    <group>
                                        <group>
                                            <button name="action_send_test_notification" type="object" string="Enviar Recordatorio" class="btn-warning" invisible="state != 'draft'" help="Enviar recordatorio manual al chofer"/>
                                        </group>
                                    </group>
                                </group>
                                <separator string="Actividades y Notificaciones"/>
                                <field name="activity_ids" widget="mail_activity"/>
                            </page>
                            <page string="Archivos" name="attachments">
                                <group string="Archivos del Viaje">
                                    <field name="document_ids" widget="many2many_binary" help="Archivos relacionados con el viaje (fotos, documentos, comprobantes, etc.)"/>
                                </group>

                                <div class="row mt-3">
                                    <div class="col-12">
                                        <button name="action_view_attachments" type="object" string="Ver Todos los Archivos" class="btn btn-secondary" help="Ver y gestionar todos los archivos del viaje"/>
                                    </div>
                                </div>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter>
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                    </chatter>
                </form>
            </field>
        </record>

        <!-- Vista Kanban de Viajes -->
        <record id="view_driverpro_trip_kanban" model="ir.ui.view">
            <field name="name">driverpro.trip.kanban</field>
            <field name="model">driverpro.trip</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="driver_id"/>
                    <field name="vehicle_id"/>
                    <field name="origin"/>
                    <field name="destination"/>
                    <field name="state"/>
                    <field name="start_datetime"/>
                    <field name="duration"/>
                    <field name="amount_mxn"/>
                    <field name="amount_usd"/>
                    <field name="total_amount_mxn"/>
                    <field name="is_paused"/>
                    <templates>
                        <t t-name="card">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click 
                                #{record.is_paused.raw_value ? 'oe_kanban_card_fancy' : ''}">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="driver_id"/>
 -                                            <field name="vehicle_id"/>
                                        </span>
                                    </div>
                                    <div t-if="record.is_paused.raw_value" class="o_kanban_record_top_right">
                                        <span class="badge badge-warning">Pausado</span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-12">
                                            <strong>
                                                <field name="origin"/>
 →                                                <field name="destination"/>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="row" t-if="record.start_datetime.raw_value">
                                        <div class="col-6">
                                            <i class="fa fa-clock-o"/>
                                            <field name="start_datetime" widget="datetime"/>
                                        </div>
                                        <div class="col-6" t-if="record.duration.raw_value">
                                            <i class="fa fa-hourglass-half"/>
                                            <field name="duration" widget="float_time"/>
                                        </div>
                                    </div>
                                    <div class="row" t-if="record.total_amount_mxn.raw_value">
                                        <div class="col-12">
                                            <strong>Total: </strong>
                                            <field name="total_amount_mxn" widget="monetary"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vista de Búsqueda para Viajes -->
        <record id="view_driverpro_trip_search" model="ir.ui.view">
            <field name="name">driverpro.trip.search</field>
            <field name="model">driverpro.trip</field>
            <field name="arch" type="xml">
                <search string="Buscar Viajes">
                    <field name="name" string="Número de Viaje"/>
                    <field name="driver_id" string="Chofer"/>
                    <field name="vehicle_id" string="Vehículo"/>
                    <field name="origin" string="Origen"/>
                    <field name="destination" string="Destino"/>
                    <filter string="Borradores" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Activos" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Pausados" name="paused" domain="[('state', '=', 'paused')]"/>
                    <filter string="Terminados" name="done" domain="[('state', '=', 'done')]"/>
                    <filter string="Cancelados" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Viajes Programados" name="scheduled" domain="[('is_scheduled', '=', True)]"/>
                    <filter string="Citas Próximas (15 min)" name="upcoming" domain="[('scheduled_datetime', '&gt;=', datetime.datetime.now()), ('scheduled_datetime', '&lt;=', datetime.datetime.now() + datetime.timedelta(minutes=15))]"/>
                    <filter string="Citas Hoy" name="scheduled_today" domain="[('scheduled_datetime', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('scheduled_datetime', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <separator/>
                    <filter string="Hoy" name="today" domain="[('start_datetime', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('start_datetime', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <filter string="Esta Semana" name="this_week" domain="[('start_datetime', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('start_datetime', '&lt;=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter string="Este Mes" name="this_month" domain="[('start_datetime', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d')), ('start_datetime', '&lt;=', ((context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1) - datetime.timedelta(days=1)).strftime('%Y-%m-%d'))]"/>
                    <separator/>
                    <group expand="0" string="Agrupar por">
                        <filter string="Estado" name="group_state" domain="[]" context="{'group_by': 'state'}"/>
                        <filter string="Chofer" name="group_driver" domain="[]" context="{'group_by': 'driver_id'}"/>
                        <filter string="Vehículo" name="group_vehicle" domain="[]" context="{'group_by': 'vehicle_id'}"/>
                        <filter string="Programados" name="group_scheduled" domain="[]" context="{'group_by': 'is_scheduled'}"/>
                        <filter string="Fecha de Inicio" name="group_date" domain="[]" context="{'group_by': 'start_datetime:day'}"/>
                        <filter string="Fecha de Cita" name="group_scheduled_date" domain="[]" context="{'group_by': 'scheduled_datetime:day'}"/>
                        <filter string="Compañía" name="group_company" domain="[]" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Acción para Viajes -->
        <record id="action_driverpro_trip" model="ir.actions.act_window">
            <field name="name">Viajes Driver Pro</field>
            <field name="res_model">driverpro.trip</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Registra el primer viaje!
                </p>
                <p>
                    Gestiona todos los viajes realizados por los choferes de manera simple y eficiente:
                </p>
                <ul>
                    <li>
                        <strong>Selección automática:</strong> Al elegir un chofer, el vehículo y tarjeta se asignan automáticamente basándose en la configuración del módulo Fleet.</li>
                    <li>
                        <strong>Control de estados:</strong> Inicia, pausa, reanuda y finaliza viajes con seguimiento completo de tiempos.</li>
                    <li>
                        <strong>Gestión de créditos:</strong> Consumo automático de créditos de tarjetas al iniciar cada viaje.</li>
                    <li>
                        <strong>Historial completo:</strong> Registro de pausas, adjuntos y comentarios para cada viaje.</li>
                </ul>
                <p>
                    <em>Nota: Asegúrate de que los choferes tengan vehículos asignados en el módulo Fleet y que los vehículos tengan tarjetas activas.</em>
                </p>
            </field>
        </record>

        <!-- Vista Lista de Motivos de Pausa -->
        <record id="view_driverpro_pause_reason_tree" model="ir.ui.view">
            <field name="name">driverpro.pause.reason.tree</field>
            <field name="model">driverpro.pause.reason</field>
            <field name="arch" type="xml">
                <list string="Motivos de Pausa" editable="bottom">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active"/>
                    <field name="description"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <!-- Vista Formulario de Motivos de Pausa -->
        <record id="view_driverpro_pause_reason_form" model="ir.ui.view">
            <field name="name">driverpro.pause.reason.form</field>
            <field name="model">driverpro.pause.reason</field>
            <field name="arch" type="xml">
                <form string="Motivo de Pausa">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Nombre del motivo"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" placeholder="Descripción del motivo de pausa..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para Motivos de Pausa -->
        <record id="action_driverpro_pause_reason" model="ir.actions.act_window">
            <field name="name">Motivos de Pausa</field>
            <field name="res_model">driverpro.pause.reason</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    ¡Define los motivos de pausa!
                </p>
                <p>
                    Configura los diferentes motivos por los cuales 
                    los choferes pueden pausar sus viajes.
                </p>
            </field>
        </record>

    </data>
</odoo>
