            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <!-- Movimientos -->
        <record id="driverpro_card_movement_rule_all" model="ir.rule">
            <field name="name">Driver Pro Card Movement All Rule</field>
            <field name="model_id" ref="model_driverpro_card_movement"/>
