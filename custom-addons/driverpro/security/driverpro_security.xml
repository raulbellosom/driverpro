<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Categorías de Aplicación -->
        <record id="module_category_driverpro" model="ir.module.category">
            <field name="name">Driver Pro</field>
            <field name="description">Gestión de flotillas Driver Pro</field>
            <field name="sequence">20</field>
        </record>

        <!-- Grupos de Usuario -->
        <record id="group_driverpro_user" model="res.groups">
            <field name="name">Driver Pro User</field>
            <field name="category_id" ref="module_category_driverpro"/>
            <field name="comment">Usuario interno de Driver Pro</field>
            <field name="implied_ids" eval="[(4, ref('fleet.fleet_group_user'))]"/>
        </record>

        <record id="group_driverpro_manager" model="res.groups">
            <field name="name">Driver Pro Manager</field>
            <field name="category_id" ref="module_category_driverpro"/>
            <field name="comment">Acceso completo a Driver Pro</field>
            <field name="implied_ids" eval="[(4, ref('group_driverpro_user'))]"/>
        </record>

        <record id="group_portal_driver" model="res.groups">
            <field name="name">Portal Driver</field>
            <field name="category_id" ref="module_category_driverpro"/>
            <field name="comment">Chofer con acceso solo a API</field>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <!-- Reglas de Acceso a Registros -->

        <!-- Tarjetas -->
        <record id="driverpro_card_rule_manager" model="ir.rule">
            <field name="name">Driver Pro Card Manager Rule</field>
            <field name="model_id" ref="model_driverpro_card"/>
            <field name="groups" eval="[(4, ref('group_driverpro_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="driverpro_card_rule_user" model="ir.rule">
            <field name="name">Driver Pro Card User Rule</field>
            <field name="model_id" ref="model_driverpro_card"/>
            <field name="groups" eval="[(4, ref('group_driverpro_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

